<p id="notice"><%= notice %></p>
<h1>Cars</h1>
<div id="container">

      <% @cars.each do |car| %>
        <div class="item" style="width:25%">
          <div class="thumbnail">
            <%= car.name %>
            <%= image_tag(car.photo, :class => 'img-responsive') %>
            <%= car.model %>
            <div class="button" style="margin-top:10px; margin-bottom:10px">
              <%= link_to 'Show', car, :class => 'btn' %>
              <%= link_to 'Edit', edit_car_path(car), :class => 'btn' %>
              <% if user_signed_in? %>
                <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Car', new_car_path %>
  <% end %>
</div>
